package course;

import java.util.Scanner;

public class CourseEgn {

	
	Admin ad=new Admin();
	
	public void adminChoice() {
		while(true) {

			System.out.println("=========================================================");
			System.out.println("====1.학생추가2.학생삭제|3.전교생 점수보기|4.학생모드|5.종료");
			System.out.println("=========================================================");

			Scanner sc=new Scanner(System.in);
			

			int adminChoice;
			switch(adminChoice=sc.nextInt()) {

			case 1:
				System.out.println("학번은");int serialNum = sc.nextInt();
				System.out.println("전공은");String major=sc.next();
				System.out.println("자바 점수는 ");int javaScore=sc.nextInt();
				System.out.println("오라클 점수는");int dataScore=sc.nextInt();
				ad.addStudentList(serialNum, major, javaScore, dataScore);



			case 2: 
				ad.showStudnetList();



			}



		}

	}
}
