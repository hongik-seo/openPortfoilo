package com.nanam.payController;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.nanam.pointDB.Point;
import com.nanam.pointDB.PointDAO;


@WebServlet("/pay/plusPayPoint")
public class PlusPayPoint extends HttpServlet {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	



	String result;
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		// TODO Auto-generated method stub
		
		String payId=req.getParameter("payId");
		String payPhone=req.getParameter("payPhone");
		
		
		PointDAO pControl=null;
		
		pControl=PointDAO.getInstance();
		
		Point p=pControl.selectPointPay(payId,payPhone);
		
		
		req.setAttribute("point", p);
		
		result="/pay/orderFin";
		
		
		req.getRequestDispatcher(result).forward(req, resp);
		
		
		
	}
	
	
	
	
}
