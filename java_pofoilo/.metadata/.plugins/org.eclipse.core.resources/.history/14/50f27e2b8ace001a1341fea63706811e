package banking;

import java.util.Scanner;

public class BankingEngine {
	
	
	Scanner sc=new Scanner(System.in);
	String adminID;
	String adminPWD;

	public void AdminChoice() {
		
		while(true) {
			
			
			
			
			System.out.println("==============================================");
			System.out.println("==1.계좌계설|2.계좌삭제|3.계좌 조회|4.사용자모드|5.종료==");
			System.out.println("==============================================");
			int adminChoice=sc.nextInt();
			
			Scanner sc=new Scanner(System.in);	
			
			Admin ad=new Admin();
			switch(adminChoice) {

			case 1: 
				
				
				ad.addAccountList();
				ad.makeAccountList();
				
				//System.out.println(1);
				break;
			case 2:
				
				System.out.print("관리자 아이디를 입력하세요");adminID=sc.next();
				System.out.print("관리자 비밀번호를 입력하세요");adminPWD=sc.next();
				if(adminID.equals("scott")&&adminPWD.equals("tiger")) {
				
				System.out.println("계좌를 삭제합니다.");
				//ad.deleteAccount();
				//System.out.println(2);
				}
				break;

			case 3:
				
				
				
				
				
				ad.showAccountAllInfo();
				//System.out.println(3);
				
				
				break;
				

			case 4: 
				System.out.println("사용자 모드로 전환홥니다.");
				UserChoice();
				//System.out.println(4);
				break;
				

			case 5:
				System.out.println("프로그램을 종료합니다.");
				System.exit(0);
				break;
				
							
			default :
				System.out.println("잘못 입력했습니다. 다시 입력해주세요(1~5)");
				continue;
			}
			
			continue;
			
			
		}
		
		
		
		
	}

	
	
	
	
	public void UserChoice() {
		
	
		while(true) {
			
			
			System.out.println("==================================================");
			System.out.println("====1.입금|2.출금|3.계좌이체|4.관리자모드|5.프로그램 종료====");
			System.out.println("==================================================");
			int userChoice=sc.nextInt();
			
			switch(userChoice) {
			
			
			case 1: 
				System.out.println("돈을 입금합니다.");
				//user.putMoney();
				//System.out.println(1);
				break;
			case 2: 
				System.out.println("돈을 출금합니다.");
				//user.takeMoney();
				
				//System.out.println(2);
				break;
			
			case 3:
				
				System.out.println("돈을 계좌이체 합니다.");
				//user.sendMoney();
				//System.out.println(3);
				break;
				
				
			case 4: 
				System.out.println("관리자 모드로 전환합니다.");
				
				AdminChoice();
				break;
							
			case 5: 
				System.out.println("프로그램을 종료합니다.");
				System.exit(0);
				continue;
			}
			
			continue;

		}
	
	
	}
	
	
}
