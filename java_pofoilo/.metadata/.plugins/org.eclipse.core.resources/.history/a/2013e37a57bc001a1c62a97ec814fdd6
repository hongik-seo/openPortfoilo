package banking_Sysyem_Test;

import java.util.Scanner;

public class Customer{
	
	
	Scanner sc=new Scanner(System.in);	
	
	//필드 선언
	
	String name;
	int accountNum;
	int balance;
	int money;
	int result;
	int choice=0;
	
	public void choiceNum() {

		
		while(true) {
			
			choice=sc.nextInt();
			

			


			if(choice==1) {
				
				intialMoney();
				
			}else if(choice==2) { 
				result();
			
				
				
			}else if(choice==3) {
				System.out.println("계좌번호");
				System.out.println("예금액");
				saveMoney();
			
				
			
			}else if(choice==4) {
				System.out.println("계좌번호");
				System.out.println("출금액");
				takeMoney();
		
			}else if(choice==5) {
				
				System.out.println("프로그램 종료");
				break;
			}
			
		


		}

		
			
	}
	}
	
	

	public boolean intialMoney() {

		accountNum=sc.nextInt();
		name=sc.next();
		money=sc.nextInt();
		result=(balance+=money);

		if((accountNum>10000000)&&(result>0)) {
		System.out.println("계좌가 생성되었습니다.");
			return true;
		
		}else {
			
			System.out.println("계좌번호 1000000이상 초기입금액 0원이상");
			return false;
		}
	
	}
	
	public void result() {
		
		if((intialMoney()==true)||(saveMoney()==true)||(takeMoney()==true)) {
			
			System.out.println(accountNum=sc.nextInt());
			System.out.println(name=sc.next());
			System.out.println(result=sc.nextInt());
			
		}else {
			
			System.out.println("계좌가 없습니다.");
		}
		
		
	}


	

	public boolean saveMoney() {
		
			
		if(intialMoney()==true) {
			balance+=money;
			System.out.println("예금이 성공적으로 되었습니다.");
			return true;
			
		}else {
			
		
			return false;
		}
						
			
		}
	
	public boolean takeMoney() {
		accountNum=sc.nextInt();
		
		if(intialMoney()==true&& saveMoney()==true) {
			balance-=money;
			System.out.println("출금이 성공적으로 되었습니다.");
			return true;
			
		}else {
		
			return false;
		}
		
		
		
		
	}

	
}


	
	

	



