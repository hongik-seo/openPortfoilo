	public void takeMoney(int takeMoney,String takeUserAccountNum) {
		
		
		for(int i=0; i<Admin.list.size(); i++) {

	
		
		
			
			if(Admin.list.get(i).getUserAccountNum().equals(takeUserAccountNum)) {

