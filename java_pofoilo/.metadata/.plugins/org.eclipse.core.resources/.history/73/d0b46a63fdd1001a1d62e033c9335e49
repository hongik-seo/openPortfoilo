package banking;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.Scanner;

public class Admin {
	
	
	static ArrayList<User> list= new ArrayList<User>();
	
	
	



	private String userAccountNum;

	private String userName;


	private int money;
	
	


	
		

	
	
	public ArrayList<User> makeAccountList(String userAccountNum, String userName) {
		
		
		list.add(new User(userAccountNum,userName));
		//list.add(use2=new User(userAccountNum,userName));
		return list;
	}
	
	
	public void showAccountlist() {

		User[] use=new User[20];

		for(int i=0; i<list.size(); i++) {

			use=list.get(i);


		}



	}
	
	public void removeAccountList(String deletAcN) {

		for(int i=0; i<list.size(); i++) {
			if(list.get(i).getAll().contains(deletAcN)) {
				
				list.remove(i);
				
			}


		}


	}

	
}
	