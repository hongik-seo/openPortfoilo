package banking;

import java.util.Scanner;

public class BankingEng {

	
	Admin ad=new Admin();
	User use=new User();


	public void userChoice() {
		
		
	

		
		while(true) {
			System.out.println("========================사용자모드==============================");
			System.out.println("==========1.계좌이체|2.입금|3.출금|4.계좌조회|5.사용자모드|6.종료=======");
			System.out.println("=============================================================");
			Scanner sc=new Scanner(System.in);
			int userChoiceNum=sc.nextInt();

			switch(userChoiceNum) {


			
			case 1: 

				System.out.print("비밀번호는 ");int userPWD2=sc.nextInt();
				if(use.getUserPWD()==userPWD2) {
					System.out.print("송금할 계좌주 계좌번호는");String sendAccountNum=sc.next();
					System.out.print("송금액은");int sendMony=sc.nextInt();

					use.sendMoney(sendMony,sendAccountNum);
				}
				break;

			case 2:	
				
				
				System.out.print("입금할 계좌주 계좌번호는");String userAccountNum=sc.next();
				System.out.print("비밀번호는 ");int userPWD=sc.nextInt();
				System.out.print("입금액은");int money=sc.nextInt();

				use.setUserPWD(userPWD);
				 if(use.getUserPWD()==userPWD) {

					use.putMoney(money,userAccountNum);

				}
				
				break;
				

			case 3: 
				
				System.out.print("출금할 계좌주 계좌번호는");String takeUserAccountNum=sc.next();
				System.out.print("비밀번호는 ");int userPWD1=sc.nextInt();
				System.out.println("출금액은");int takeMoney=sc.nextInt();
				


				if(use.getUserPWD()==userPWD1) {
				
					use.takeMoney(takeMoney,takeUserAccountNum);
				}
				break;

			case 4: 
				System.out.print("조회할 계좌주 이름은");String theUserName=sc.next();
				System.out.print("조회할 계좌주 계좌번호는");String theUserAccountNum=sc.next();
				use.thisUserinfo(theUserName,theUserAccountNum);
				break;
			case 5:	adminChoice();
				break;
			case 6: System.exit(0);
				break;

			}
			continue;


		}
	}
	
	
	public void adminChoice() {
		String adminID;
		String adminPWD;
		String userFindPWD;
		
		
		while(true) {

			
			
			System.out.println("========================관리자 모드=============================");
			System.out.println("==========1.계좌계설|2.계좌삭제|3.계좌 조회|4.사용자 모드|5.종료=========");
			System.out.println("=============================================================");
			Scanner sc=new Scanner(System.in);
			int adminChoiceNum=sc.nextInt();

			switch(adminChoiceNum) {


			case 1: 
				System.out.print("만드실 계좌네임을 이력해주세요 :");String userName=sc.next();
				System.out.print("만드실 계좌번호를 입력해주세요 :");String userAccountNum=sc.next();
				System.out.print("만드실 계좌비밀번호를 입력해주세요");int userPWD=sc.nextInt();
				ad.makeAccountList(userName, userAccountNum,userPWD);

				break;

			case 2:
			
				System.out.print("삭제할 계좌주 계좌번호");String deletAcN=sc.next();
				System.out.print("삭제할 계좌주 이름");String deleteN=sc.next();
				ad.removeAccountList(deletAcN);
				break;

			case 3: 

				ad.showAccountlist();
				break;

			case 4: userChoice();
				break;
			case 5:System.exit(0);
				break;
			}
			continue;



		}
		
		
	}

}
