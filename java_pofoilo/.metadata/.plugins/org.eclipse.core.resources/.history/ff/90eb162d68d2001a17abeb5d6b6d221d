package course;

import java.util.HashMap;
import java.util.HashSet;
import java.util.Iterator;
import java.util.Scanner;
import java.util.Set;

public class Admin {

	static HashMap<Integer,Student> list=new HashMap<Integer,Student>();
	
	int serialNum;

	
	
	
	public void addStudentList(int serialNum,String name,String major,int javaScore,int dataScore) {
		
		int i=0;
		
		i=serialNum;
		
		list.put(i,new Student(serialNum,name,major,javaScore,dataScore));
		
	}
	
	
	
	public void showStudnetList() {
		
	
		
		for (int i : list.keySet()) {

		    System.out.print("학번은"+list.get(i).serialNum+"\t"+"이름은"+list.get(i).getName()+"\t"+"전공은"+list.get(i).getMajor()+"\t"+"자바점수는"+list.get(i).getJavaScore()+"\t"+"오라클 점수는"+list.get(i).getDataScore()+"\t");
		    //rank();
		}
			

	}
	
	public void removeStudentList(int findSerialNum) {
		
		for(int i :list.keySet()) {
		
		if(list.get(i).getSerialNum()==findSerialNum) {	
			list.remove(i).getSerialNum();
		}
		
		
	}
		
	}
	
	
	public void showAllInfo() {
		
		
		showStudnetList();
		for(int i :list.keySet()) {
			
			if(list.get(i).getMajor().equalsIgnoreCase("SmartWeb")) {
				
				System.out.print("자바학점은"+"\t");System.out.print(Major.SmartWeb.java());
				
				System.out.print("\t"+"오라클 학점은");System.out.print(Major.SmartWeb.oracle());
				System.out.print("\t"+"총점은");System.out.println(list.get(i).getDataScore()+list.get(i).getJavaScore());;
				
				System.out.println();
				
			}else if(list.get(i).getMajor().equalsIgnoreCase("bigdata")) {
				
				System.out.print("자바학점은"+"\t");System.out.print(Major.BigData.java());
				//System.out.print("");
				System.out.print("\t"+"오라클 학점은");System.out.print(Major.BigData.oracle());
				System.out.print("\t"+"총점은");System.out.println(list.get(i).getDataScore()+list.get(i).getJavaScore());;
				//System.out.println("\t"+"순위는");rank();
				
				System.out.println();
			}else {
				
				System.out.println("잘못된 입력입니다.");
			}
			
		}
		

	}
	
	public void rank() {
		
		int rank=1;
		
		
		for(int i : list.keySet()) {
			
			
			
			if(list.containsValue(list.get(i).sum())) {
				System.out.println("t");
				
			}
				
				
				
			
			
		}
	
	

	}
	



	public static HashMap<Integer, Student> getList() {
		return list;
	}

	public static void setList(HashMap<Integer, Student> list) {
		Admin.list = list;
	}

	public int getSerialNum() {
		return serialNum;
	}

	public void setSerialNum(int serialNum) {
		this.serialNum = serialNum;
	}

	
	



}
